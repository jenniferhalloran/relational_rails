<% @stands.each do |stand| %>
<div class="stand-<%=stand.id%>">
<%= link_to stand.name, "/stands/#{stand.id}" %> <br>
<p> <b> Open? </b> <%= stand.open %> </p>
<p> <b> Review Rating: </b> <%= stand.review_rating %>/5 </p>
<p> <%= link_to "Edit", "/stands/#{stand.id}/edit" %> </p><br>
</div>
<% end %> <br>

<%= form_with url: "/farmers_markets/#{@farmers_market.id}/stands", method: :get, local: true do |form| %>
<%= form.label :rating_over, "Find stands with rating over:" %>
<%= form.number_field :rating_over, in: 0..5 %>
<%= form.submit "Search" %>
<% end %> <br>

<%= link_to "Alphabetize", "/farmers_markets/#{@farmers_market.id}/stands/?sort=name" %> |
<%= link_to "Create Stand", "/farmers_markets/#{@farmers_market.id}/stands/new" %> <br><br>
